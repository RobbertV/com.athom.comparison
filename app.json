  "api": {
    "settings": {
      "method": "put",
      "path": "/settings/"
    }
  },
  "flow": {
    "actions": [
      {
        "id": "action_START",
        "title": {
          "en": "Start consumption time and compare value",
          "nl": "Start verbruik tijd en vergelijk waarde"
        },
        "titleFormatted": {
          "en": "Start comparison for [[device]] with [[duration]] and set START value [[value]]",
          "nl": "Begin vergelijking voor [[device]] met [[duration]] en zet START waarde [[value]]"
        },
        "hint": {
          "en": "Will download new .ics files to update current events",
          "nl": "Nieuw .ics bestand wordt gedownload om de IcalCalendar app bij te werken"
        },
        "args": [
          {
            "name": "device",
            "type": "autocomplete",
            "placeholder": {
              "en": "Devicename",
              "nl": "Apparaatnaam"
            }
          },
          {
            "name": "value",
            "type": "number",
            "required": false,
            "placeholder": {
              "en": "value (optional)",
              "nl": "waarde (optioneel)"
            }
          },
          {
            "name": "duration",
            "type": "dropdown",
            "title": {
              "en": "With duration check",
              "nl": "Met verbruikstijd check"
            },
            "values": [
              {
                "id": "1",
                "label": {
                  "en": "With duration check",
                  "nl": "Met verbruikstijd check"
                }
              },
              {
                "id": "0",
                "label": {
                  "en": "Without duration check",
                  "nl": "Zonder verbruikstijd check"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "action_END",
        "title": {
          "en": "Stop consumption time and compare value",
          "nl": "Stop verbruik tijd en vergelijk waarde"
        },
        "titleFormatted": {
          "en": "Stop comparison for [[device]] with STOP value [[value]]",
          "nl": "Stop vergelijking voor [[device]] met STOP waarde [[value]]"
        },
        "hint": {
          "en": "Will download new .ics files to update current events",
          "nl": "Nieuw .ics bestand wordt gedownload om de IcalCalendar app bij te werken"
        },
        "args": [
          {
            "name": "device",
            "type": "autocomplete",
            "placeholder": {
              "en": "Devicename",
              "nl": "Apparaatnaam"
            }
          },
          {
            "name": "value",
            "type": "number",
            "required": false,
            "placeholder": {
              "en": "value",
              "nl": "waarde"
            }
          }
        ]
      },
      {
        "id": "action_SET_CURRENCY",
        "title": {
          "en": "Convert number to local currency and put it to a variable",
          "nl": "Maak nummer naar locale valuta en zet het in variable"
        },
        "titleFormatted": {
          "en": "Convert [[value]] to [[currency]] add to [[tag]]",
          "nl": "Zet [[value]] om in [[currency]] voeg in [[tag]]"
        },
        "hint": {
          "en": "Convert a number value to currency, place this in a variable to use in your flow",
          "nl": "Conventeer een nummer waarde in valuta en plaats deze in een variable om te gebruiken in je flow"
        },
        "args": [
          {
            "name": "value",
            "type": "number",
            "placeholder": {
              "en": "number",
              "nl": "number"
            }
          },
          {
            "name": "currency",
            "type": "dropdown",
            "title": {
              "en": "Select currency"
            },
            "values": [
              {
                "id": "EUR",
                "label": {
                  "en": "â‚¬ Euro"
                }
              },
              {
                "id": "USD",
                "label": {
                  "en": "$ US Dollar"
                }
              },
              {
                "id": "GBP",
                "label": {
                  "en": "Â£ GBP"
                }
              }
            ]
          },
          {
            "name": "device",
            "type": "autocomplete",
            "title": {
              "en": "Select tag"
            }
          }
        ]
      }
    ]
  }
}